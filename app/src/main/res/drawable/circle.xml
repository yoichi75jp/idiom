<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <!-- ボタンが押されていない＆フォーカスされていない場合 -->
    <item android:state_pressed="false" android:state_focused="false">
        <!--
            *shapeタグで形状を指定 ring：同心円の外形
            *innerRadiusは内側の円の半径
            *thicknessは内側から外側に向かっての距離
            *円を1つにしたい場合は、innerRadiusを0dpにする
        -->
        <shape
            android:shape="ring"
            android:innerRadius="38dp"
            android:thickness="10dp"
            android:useLevel="false">
            <!-- 直径=(innerRadius 38dp + thickness 10dp + stroke:width 2dp)×2 -->
            <size
                android:width="100dp"
                android:height="100dp"/>
            <!-- strokeタグで線の太さ(width)と色(color)を指定 -->
            <stroke android:width="4dp" android:color="#33B5E5" />
        </shape>
    </item>
</selector>